# User settings are loaded per-host via includeIf (ghq-based paths)
[includeIf "gitdir:~/ghq/github.com/"]
    path = ~/.gitconfig.github

[includeIf "gitdir:~/ghq/gitlabs.soundunited.com/"]
    path = ~/.gitconfig.gitlab-su

[core]
    editor = nvim
    pager = delta
    autocrlf = input
    ignorecase = false

[init]
    defaultBranch = main

[pull]
    rebase = true

[push]
    default = current
    autoSetupRemote = true

[fetch]
    prune = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    side-by-side = true
    line-numbers = true

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    unstage = reset HEAD --
    last = log -1 HEAD
    amend = commit --amend --no-edit

[ghq]
    root = ~/ghq
